<%if flash[:notice]%>
  <%flash.each do |notice, msg| %>
    <h1><%=msg%></h1>
  <%end%>
<%end%>

<div class="text-center font-weight-light mt-5">
  <h2 class="font-weight-light"><%= @trail.name %></h2><br>
  <div><img src="<%= @trail.image_url %>" class="rounded mx-auto d-block img-fluid" width="700" height="400"></div>

 
  <div class="align-self-baseline mt-3">
    <%=button_to "Like", liked_trails_path(trail_id:@trail), method: :post%><br>
    This trail has been liked: <%=@trail.likescounter%>
  </div>
 

  <div class="mt-3"><b>Length:</b> <%= @trail.length%>mi<br></div>
  <div class="container"><b>Description:</b> <%= @trail.trail_description%><br></div>
  <div><b>Route Type:</b> <%= @trail.direction%><br></div>
</div>



<div class="text-center font-weight-light mt-3">
    <div id="trailmap" ></div>
      <iframe 
      width="500"
      height="350"
      frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/search?key=AIzaSyBKX-cXzMaQuMgh-VYgJM40ymprn_B3Zz8&q=<%=@trail.trail_latitude%>,<%=@trail.trail_longitude%>&zoom=10" allowfullscreen>
      </iframe>
</div>



