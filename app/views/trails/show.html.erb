<div>
  <h2><%= link_to @trail.name, trail_path %></h2><br>
  <div><b>Length:</b> <%= @trail.length%>mi<br></div>
  <div><b>Description:</b> <%= @trail.trail_description%><br></div>
  <div><b>Route Type:</b> <%= @trail.direction%><br></div>
  <div> <img src="<%= @trail.image_url %>"></div>
</div>

<div>
    <div id="trailmap" ></div>
    <iframe 
    width="500"
    height="350"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/search?key=AIzaSyBKX-cXzMaQuMgh-VYgJM40ymprn_B3Zz8&q=<%=@trail.trail_latitude%>,<%=@trail.trail_longitude%>&zoom=10" allowfullscreen>
    </iframe>
</div>