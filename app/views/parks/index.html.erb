<script defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBKX-cXzMaQuMgh-VYgJM40ymprn_B3Zz8&callback=initMap">
</script>

<div id="map-container-google-1" class="mx-auto" style="height: 500px, border:10px">
<span class="border">
<div class="text-center"><h2> Select a Park </h2></div>
<%# <div class="mx-auto" style="width: 200px"> %>
    <%# <div style="display: flex";> %>
        <div id="map" style="height:500px; width:100%" class="flex-sm-column"></div>

        
    <%# </div> %>
</div>
    <script>
        var marker;

        function initMap() {
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 6,
                center: {lat: 42.402900, lng: -122.885240}
            });
            <% @parks.filter{|park| park.latitude && park.latitude}.each do |park| %>
            
                marker = new google.maps.Marker({
                    map: map,
                    draggable: false,
                    animation: google.maps.Animation.DROP,
                    position: {lat: <%=park.latitude%>, lng: <%=park.longitude%>},
                    title: "<%=park.name%>"
                });
                marker.addListener('click', function () {
                    // document.getElementById('parkinfo').src = '/parks/<%=park.id%>'
                    window.location.href = '/parks/<%=park.id%>'

                });
            <% end %>
        }
    </script>

</span>


<div class="album ">
   <div class="container-fluid">
      <div class="row">

          <% Park.all.each do |park|%>
            <div class="card m-3" style="width: 20rem;">
            <img class="card-img-top" src= "<%= park.image_url %>" alt="<%=park.name%>"> 
              <div class="card-body">
                <h5 class="card-title"><%= park.name%>, <%=park.state%></h5>
                <p class="card-text">Number of Trails: <%=park.trailcounter%></p>
                <%=link_to "Check Out This Park", park_path(park), :class=>"btn btn-primary"%>
              </div>
            </div>
          <%end%>

    </div>
  </div>
</div>